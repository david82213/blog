<h1>All Posts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Updated Time</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td><%= link_to p.title, post_path(p) %></td>
        <td><%= truncate(p.description, length: 10) %></td>
        <td><%= p.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @posts %></p>
