<div id="post_div">
<h2><%= @post.title %></h2>
<p><%= @post.description %></p>

<%= link_to 'edit', edit_post_path(@post) %>
<%= link_to 'delete', post_path(@post),
                      method: :delete,
                      data: { confirm: 'Are you sure you want to delete this post?' } %>

<hr>
<h3>New Comment</h3>
<%= @comment.errors.full_messages.join(', ') %>
<%= form_for [@post, @comment] do |f| %>
  <div>
    <div class="left">
      <%= f.label :title %>
    </div>

    <div class="right">
      <%= f.text_field :title %>
    </div>
  </div>

  <br>
  <br>

  <div>
    <div class="left">
      <%= f.label :description %>
    </div>

    <div class="right">
      <%= f.text_area :description %>
    </div>
  </div>

  <br>
  <br>

  <%= f.submit %>
<% end %>
<hr>
</div>

<div id="comment_div">
  <h3>All comments</h3>

  <table class="table table-striped">
      <thead>
        <tr>
          <th>Author</th>
          <th>Description</th>
          <th>Created Time</th>
        </tr>
      </thead>

      <tbody>
        <% @post.comments.each do |comment| %>
          <tr>
            <td><%= 'Author name' %></td>
            <td><%= comment.description %></td>
            <td><%= comment.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
